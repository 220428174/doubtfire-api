<% stylesheets 'dashboard.css' %>
<% javascript 'dashboard.js' %>

<%= render 'layouts/projects_list', :projects => @projects, :selected_project => nil %>

<div class="span10">
	<div class="row-fluid">
		<ul class="nav nav-pills">
			<li class="active"><%= link_to "Summary", root_path %></li>
		</ul>
	</div>
	<div class="row-fluid">
		<div class="span6 widget">
			<%= render 'layouts/activity_stream' %>
		</div>
		<div class="span4 widget">
		<h2>Progress</h2>
		<div class="widget-content" id="progress-widget">
			<% @projects.each do |project| %>
				<%= render 'dashboard/project_progress', :project => project %>
			<% end %>
		</div>
	</div>
</div>