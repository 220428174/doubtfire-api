<h2><i class="icon-list"></i>Highlights</h2>
<div class="widget-content">
	<div class="activity-feed-entry">
		<div class="feed-entry-body">
			<% unless @project.overdue_tasks.empty? %>
				<h4>Overdue</h4>
				<ol>
					<% @project.overdue_tasks.each do |overdue_task| %>
						<li><%= link_to overdue_task.task_template.name, project_task_path(overdue_task) %> (<%= pluralize(overdue_task.weeks_overdue, 'week') %> overdue)</li>
					<% end %>
				</ol>
			<% end %>

			<% unless @project.currently_due_tasks.empty? %>
				<h4>Due This Week</h4>
				<ol>
					<% @project.currently_due_tasks.each do |currently_due_task| %>
						<li><%= link_to currently_due_task.task_template.name, project_task_path(currently_due_task) %></li>
					<% end %>
				</ol>
			<% end %>
		</div>
	</div>
</div>