<%= stylesheets 'tasks.css' %>

<% content_for :sidebar do %>
	<ul class="nav nav-list">
		<li class="nav-header">Dashboard</li>
		<li class="active"><%= link_to 'Home', root_url %></li>
		<% unless @student_projects.empty? %>
			<%= render 'dashboard/student_projects_links', :student_projects => @student_projects, :selected_student_project => nil %>
		<% end %>
		<% unless @tutor_project_templates.empty? %>
			<%= render 'dashboard/tutor_projects_links', :tutor_projects => @tutor_project_templates, :selected_tutor_project => nil %>
		<% end %>
	</ul>
<% end %>

<div class="span9">
	<div class="row-fluid tabbable">
		<ul class="nav nav-pills">
			<li class="active"><a href="#summary-tab" data-toggle="tab">Summary</a></li>
			<li><a href="#marking-tab" data-toggle="tab">Marking</a></li>
		</ul>
		<div class="tab-content">
			<div class="tab-pane active" id="summary-tab">
				<div class="span7 widget">
					<h2><i class="icon-user"></i><%= truncate(@student.full_name, :length => 50) %></h2>
					<div class="widget-content">
					</div>
				</div>
			</div>
			<div class="tab-pane" id="marking-tab">
				<div class="span7 widget">
					<%= render 'tutor_projects/tutor_task_backlog', :tasks => @student_project.tasks %>
				</div>
			</div>
			<div class="span5 widget">
				<h2><i class="icon-bar-chart"></i>Summary</h2>
				<div class="widget-content">

				</div>
			</div>
		</div>
	</div>
</div>