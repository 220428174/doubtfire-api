<%= stylesheets 'tasks.css' %>

<% actionable_tasks.sort{|a, b| a.task_definition.target_date <=> b.task_definition.target_date}.each do |task| %>
<div class="task-list-entry row-fluid" id="task-<%= task.id %>-entry">
	<h4>
		<%= link_to truncate(task.task_definition.name, length: 30), project_task_path(task.project, task) %>
	</h4>
	<p class="task-weighting-points">(<%= task.task_definition.weighting %> points)</p>
	<p class="toggle-task-description-container"><a href="#" class="toggle-task-description btn"><i class="icon-chevron-down"></i></a></p>
	<p class="task-submission-vs-time"><%= task_submission_vs_time_text(task) %></p>
	<div class="task-status-controls" style="display: inline-block;">
		<%= render 'units/assessor_task_status_control', task: task %>
	</div>
	<div class="task-description">
		<p><%= task.task_definition.description != "NULL" ? task.task_definition.description : "(No description provided)" %></p>
	</div>
</div>
<% end %>