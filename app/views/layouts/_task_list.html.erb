<h2>Tasks</h2>
<div class="widget-content" id="task-list-widget">
	<% tasks.each do |task| %>
	<div class="task-list-entry">
		<h3 style="display: inline">
			<%= task.task_template.name %>
			<%= badge_for_task task %>
		</h3>
		<div class="task-entry-body" id="task-<%= task.id %>-entry">
			<p><%= task.task_template.description %></p>
			<p>
				<a href="<%= project_complete_task_path(task.project, task) %>" data-method="put" class="task-status-button btn btn-primary" data-remote="true">
					Submit
					<i class="icon-external-link"></i>
				</a>
			</p>
		</div>
	</div>
	<% end %>
</div>