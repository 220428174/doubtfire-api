<% title "Project Template - #{@project_template.name}" %>

<!-- Sidebar -->
<% content_for :sidebar do %>
    <% if current_user.superuser? %>
        <%= render :partial => 'layouts/superuser_menu' %>
    <% else %>
        <%= render :partial => 'layouts/admin_menu' %>
    <% end %>
<% end %>

<div class="span9">
    <ul class="breadcrumb">
        <li>
          <%= link_to "Home", root_url %>
          <span class="divider">/</span>
        </li>
        <li>
          <%= link_to "Project Templates", project_templates_url %>
          <span class="divider">/</span>
        </li>
        <li class="active"><%= @project_template.name %> (Adminstration)</li>
    </ul>

    <div class="tabbable"> 
        <ul class="nav nav-pills">
            <%= tab_li_tag("summary-tab", true) do %>
                <a href="#summary-tab" data-toggle="tab">Summary</a>
            <% end %>
            <%= tab_li_tag("teams-tab") do %>
                <a href="#teams-tab" data-toggle="tab">Teams</a>
            <% end %>
            <%= tab_li_tag("tasks-tab") do %>
                <a href="#tasks-tab" data-toggle="tab">Tasks</a>
            <% end %>
            <%= tab_li_tag("participants-tab") do %>
                <a href="#participants-tab" data-toggle="tab">Participants</a>
            <% end %>
        </ul>
        <div class="tab-content">
            <!-- Information about the current project -->
            <%= tab_div_tag("summary-tab", true) do %>
                <div class="widget">
                    <%= 
                        render partial: 'summary_information',
                        locals: { project_template: @project_template }
                    %>
                </div>
            <% end %>
            
            <!-- Table of tasks for the current project -->
            <%= tab_div_tag("tasks-tab") do %>
                <div class="widget">
                    <%= render partial: 'tasks',
                        locals: {
                            project_template: @project_template, task_templates: @project_tasks
                        }
                    %>
                </div>
            <% end %>

            <!-- Table of teams for the current project -->
            <%= tab_div_tag("teams-tab") do %>
                <div class="widget">
                    <%=
                        render partial: 'teams',
                        locals: {
                            project_template: @project_template,
                            project_teams: @project_teams
                        }
                    %>
                </div>
            <% end %>

            <!-- Table of users for the current project -->
            <%= tab_div_tag("participants-tab") do %>
                <div class="widget">
                    <%=
                        render partial: 'participants',
                        locals: {
                            project_template: @project_template,
                            participants: @project_users
                        }
                    %>
                </div>
            <% end %>
        </div>
    </div>
</div>
