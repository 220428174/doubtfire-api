<tr id="project-<%= project_template.id %>-row">
  <td><%= link_to project_template.name, project_template_path(project_template) %></td>
  <td><%= project_template.description %></td>
  <td><%= get_convenors_string(project_template.id) %></td>
  <td><%= project_template.start_date.strftime("%d %B %Y") %></td>
  <td><%= project_template.end_date.strftime("%d %B %Y") %></td>
  <td><%= project_template.created_at.strftime("%d %b %Y at %I:%M%p") %></td>
  <td>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_project_template_path(project_template), 
                "data-remote" => true,
                :class => 'btn btn-mini' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                project_template_path(project_template),
                "data-remote" => true,
                :method => :delete,
                :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                :class => 'btn btn-mini btn-danger' %>
  </td>
</tr>