<%= simple_form_for @project_template, :html => { :class => 'well form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :description, :as => :text, :input_html => { :rows => 5 } %>
  <%= f.input :start_date, :as => :string, :input_html => {:class => "datepicker", "data-behaviour" => "datepicker", :value => "#{Date.today.strftime('%Y-%m-%d')}"}  %>
  <%= f.input :end_date, :as => :string, :input_html => {:class => "datepicker", "data-behaviour" => "datepicker", :value => "#{13.weeks.from_now.strftime('%Y-%m-%d')}"}  %>
  <% if current_user.superuser? %>
  	<%= f.input :convenors, :label => "Convenor(s)" do select_tag :convenor, options_from_collection_for_select(@convenors, "id", "full_name"), :multiple => true end %>
  <% end %>
  <%= f.button :submit %>
<% end %>