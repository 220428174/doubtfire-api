// Build the row id string from the project template id
var projectTemplateRowId = "project-" + "<%= @project_template.id %>" +  "-row";
var partial = "<%=j render :partial => 'project_templates/table_row_edit', :locals => { :project_template => @project_template } %>"

// Render the table_row_edit partial. If we just created a new team via the 'Create' button, it won't have a row in the table yet. 
if(document.getElementById(projectTemplateRowId) != null)
	$("#" + projectTemplateRowId).replaceWith(partial);		// Row already exists - replace it with the form
else
	$("#project-templates-table").append(partial);			// No row exists yet - append one

// Make sure the table is visible and the "no project templates" message is hidden.
if($("#project-templates-table").find("tbody").children().length > 0)
{
	$("#no-project-templates-message").hide();
	$("#project-templates-table").show();
}