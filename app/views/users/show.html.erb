<%- model_class = @user.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
    <dd><%= if @user.email then @user.email else "---" end %></dd>
  <dt><strong><%= model_class.human_attribute_name(:first_name) %>:</strong></dt>
    <dd><%= if @user.first_name then @user.first_name else "---" end %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_name) %>:</strong></dt>
    <dd><%= if @user.last_name then @user.last_name else "---" end %></dd>
  <dt><strong><%= model_class.human_attribute_name(:encrypted_password) %>:</strong></dt>
    <dd><%= if @user.encrypted_password then @user.encrypted_password else "---" end %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reset_password_token) %>:</strong></dt>
    <dd><%= if @user.reset_password_token then @user.reset_password_token else "---" end %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reset_password_sent_at) %>:</strong></dt>
    <dd><%= if @user.reset_password_sent_at then @user.reset_password_sent_at else "---" end %></dd>
  <dt><strong><%= model_class.human_attribute_name(:remember_created_at) %>:</strong></dt>
    <dd><%= if @user.remember_created_at then @user.remember_created_at else "---" end %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sign_in_count) %>:</strong></dt>
    <dd><%= if @user.sign_in_count then @user.sign_in_count else "---" end %></dd>
  <dt><strong><%= model_class.human_attribute_name(:current_sign_in_at) %>:</strong></dt>
    <dd><%= if @user.current_sign_in_at then @user.current_sign_in_at else "---" end %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_sign_in_at) %>:</strong></dt>
    <dd><%= if @user.last_sign_in_at then @user.last_sign_in_at else "---" end %></dd>
  <dt><strong><%= model_class.human_attribute_name(:current_sign_in_ip) %>:</strong></dt>
    <dd><%= if @user.current_sign_in_ip then @user.current_sign_in_ip else "---" end %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_sign_in_ip) %>:</strong></dt>
    <dd><%= if @user.last_sign_in_ip then @user.last_sign_in_ip else "---" end %></dd>
  <dt><strong><%= model_class.human_attribute_name(:system_role_id) %>:</strong></dt>
    <dd><%= if @user.system_role_id then @user.system_role_id else "---" end %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              users_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_path(@user),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
