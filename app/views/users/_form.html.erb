<%= simple_form_for(@user, :method => :post, :html => {:class => 'form-horizontal' }) do |f| %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :nickname %>
   	<% if can? :assign_roles, @user %>
    	<%= f.input :system_role, :collection => [["User", "user"], ["Convenor", "convenor"]], :include_blank => false %>
    <% end %>
    <%= f.button :submit %>
<% end %>
