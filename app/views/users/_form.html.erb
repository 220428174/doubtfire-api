<%= simple_form_for(user, html: {class: 'form-horizontal' }) do |f| %>
	<% if can? :assign_roles, user %>
    	<%= f.input :first_name %>
    	<%= f.input :last_name %>
        <%= f.input :email %>
    <% else %>
    	<%= f.input :first_name, input_html: {disabled: true} %>
    	<%= f.input :last_name, input_html: {disabled: true} %>
    <% end %>
    <%= f.input :nickname %>
   	<% if can? :assign_roles, user %>

        <%= f.association :roles, as: :check_boxes,
            collection: user_role_options,
            multiple: true,
            selected: current_user_roles,
            value_method: :id,
            label_method: :name
        %>
    	<%= f.input :system_role,
            collection: SystemRole::ROLES.map{|role| [role.titleize, role] },
            selected: user.system_role,
            include_blank: false
        %>
    <% end %>
    <%= f.button :submit %>
<% end %>