<%= simple_form_for(@user, html: {class: 'form-horizontal' }) do |f| %>
	<% if can? :assign_roles, @user %>
    	<%= f.input :first_name %>
    	<%= f.input :last_name %>
        <%= f.input :email %>
    <% else %>
    	<%= f.input :first_name, input_html: {disabled: true} %>
    	<%= f.input :last_name, input_html: {disabled: true} %>
    <% end %>
    <%= f.input :nickname %>
   	<% if can? :assign_roles, @user %>
    	<%= f.input :system_role, collection: [["User", "user"], ["Convenor", "convenor"]], include_blank: false %>
    <% end %>
    <%= f.button :submit %>
<% end %>
