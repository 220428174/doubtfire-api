<%= simple_form_for(@user, :html => {:class => 'well form-horizontal' }) do |f| %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :system_role, :collection => [["User", "user"], ["Convenor", "convenor"]], :include_blank => false %>
    <%= f.button :submit %>
<% end %>
