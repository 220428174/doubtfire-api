<tr id="user-<%= user.id %>-row">
  <td><%= link_to user.email, user %></td> 
  <td><%= user.first_name %></td>
  <td><%= user.last_name %></td>
  <td><%= user.sign_in_count %></td>
  <td><%= user.system_role %></td>
  <td>
    <% if current_user.is_superuser? %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")), user_path(user),
                  "data-remote" => true,
                  :method => :delete,
                  :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                  :class => 'btn btn-mini btn-danger' %>
    <% elsif current_user.is_convenor? %>
      <%= link_to "Remove", remove_project_user_path(project_template.id, user.id),
                  "data-remote" => true,
                  :method => :get,
                  :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                  :class => 'btn btn-mini btn-danger' %>
    <% end %>
  </td>
</tr>