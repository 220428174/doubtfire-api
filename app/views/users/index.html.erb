<% content_for :page_banner do %>
  <h1>Convenor Dashboard</h1>  
  <p class="lead"><%= "#{@user.first_name} #{@user.last_name}" %></p>
  <hr />
<% end %>

<% content_for :sidebar do %>
  <ul class="nav nav-list">
    <li class="nav-header">
      Navigation
    </li>
    <li>
      <%= link_to "Dashboard", root_url %>
    </li>
    <li class="nav-header">
      Administration
    </li>
    <li>
      <%= link_to "Projects", project_templates_path %>
    </li>
    <li class="active">
      <%= link_to "Students", users_path %>
    </li>
  </ul>
<% end %>
<div class="widget span10">
  <h2>
      Project Templates
  </h2>
      
  <%- model_class = User.new.class -%>
  <div class="widget-content">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:email) %></th>
          <th><%= model_class.human_attribute_name(:first_name) %></th>
          <th><%= model_class.human_attribute_name(:last_name) %></th>
          <th><%= model_class.human_attribute_name(:sign_in_count) %></th>
          <th>System role</th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.email, user %></td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.sign_in_count %></td>
            <td><%= user.system_role %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_user_path(user), :class => 'btn btn-mini' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          user_path(user),
                          :method => :delete,
                          :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                          :class => 'btn btn-mini btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_user_path,
                :class => 'btn btn-primary' %>
  </div>
</div>