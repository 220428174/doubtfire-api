<tr id="task-<%= task_definition.id %>-row">
  <td><%= link_to task_definition.name, task_definition_path(task_definition) %></td>
  <td><%= task_definition.abbreviation %></td>
  <td><%= task_definition.description %></td>
  <td><%= task_definition.weighting %></td>
  <td><%= "Required" if task_definition.required %><%= "Optional" if not task_definition.required %></td>
  <td><%= task_definition.target_date.strftime("%d %B %Y") %></td>
  <td>
    <%= link_to t('.edit', default:  t("helpers.links.edit")), edit_task_definition_path(task_definition), "data-remote" => true, class:  'btn btn-mini' %>
    <%= link_to t('.destroy', default:  t("helpers.links.destroy")), task_definition_path(task_definition),
                "data-remote" => true,
                method:  :delete,
                data:  { confirm:  t('.confirm', default:  t("helpers.links.confirm", default:  'Are you sure?'))},
                class:  'btn btn-mini btn-danger' %>
  </td>
</tr>