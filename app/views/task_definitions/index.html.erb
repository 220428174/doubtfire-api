<%- model_class = TaskDefinition.new.class -%>
<div class="page-header">
  <h1><%=t '.title', default:  model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:project_id) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:weighting) %></th>
      <th><%= model_class.human_attribute_name(:required) %></th>
      <th><%= model_class.human_attribute_name(:target_date) %></th>
      <th><%=t '.actions', default:  t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @task_definitions.each do |task_definition| %>
      <tr>
        <td><%= link_to task_definition.name, task_definition_path(task_definition) %></td>
        <td><%= Unit.find(task_definition.unit_id).name %></td>
        <td><%= task_definition.description %></td>
        <td><%= task_definition.weighting %></td>
        <td><%= "Required" if task_definition.required %><%= "Optional" if not task_definition.required %></td>
        <td><%= task_definition.target_date.strftime("%d %B %Y") %></td>
        <td>
          <%= link_to t('.edit', default:  t("helpers.links.edit")),
                      edit_task_definition_path(task_definition), class:  'btn btn-mini' %>
          <%= link_to t('.destroy', default:  t("helpers.links.destroy")),
                      task_definition_path(task_definition),
                      method:  :delete,
                      data:  { confirm:  t('.confirm', default:  t("helpers.links.confirm", default:  'Are you sure?'))},
                      class:  'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', default:  t("helpers.links.new")),
            new_task_definition_path,
            class:  'btn btn-primary' %>
