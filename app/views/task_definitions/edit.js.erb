// Build the row id string from the task_definition
var taskRowId = "task-" + "<%= @task_definition.id %>" +  "-row";
var partial = "<%=j render :partial => 'task_definitions/table_row_edit', :locals => { :task_definition => @task_definition } %>"

// Render the table_row_edit partial. If we just created a new task via the 'Create' button, it won't have a row in the table yet. 
if(document.getElementById(taskRowId) != null)
	$("#" + taskRowId).replaceWith(partial);	// Row already exists - replace it with the form
else
	$("#tasks-table").append(partial);			// No row exists yet - append one

// Make sure the table is visible and the "no tasks" message is hidden.
if($("#tasks-table").find("tbody").children().length > 0)
{
	$("#no-tasks-message").hide();
	$("#tasks-table").show();
}
