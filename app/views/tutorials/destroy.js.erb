// Build the row id string from the tutorial id
var tutorialRowId = "tutorial-" + "<%= @tutorial.id %>" +  "-row";

// Delete the corresponding row in the table
$("#" + tutorialRowId).remove();

// Replace the table with a message if there are no more rows
if($("#tutorials-table").find("tbody").children().length == 0)
{
	$("#tutorials-table").hide();
	$("#no-tutorials-message").show();
}