<%- model_class = @tutorial.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:unit_id) %>:</strong></dt>
  <dd><%= Unit.find(@tutorial.unit_id).name %></dd>
  <dt><strong>Tutor:</strong></dt>
  <dd><%= User.find(@tutorial.user_id).first_name %> <%= User.find(@tutorial.user_id).last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:meeting_time) %>:</strong></dt>
  <dd><%= @tutorial.meeting_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:meeting_location) %>:</strong></dt>
  <dd><%= @tutorial.meeting_location %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tutorials_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tutorial_path(@tutorial), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tutorial_path(@tutorial),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
              :class => 'btn btn-danger' %>
</div>
