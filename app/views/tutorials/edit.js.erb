// Build the row id string from the tutorial id
var tutorialRowId = "tutorial-" + "<%= @tutorial.id %>" +  "-row";
var partial = "<%=j render 'tutorials/table_row_edit', tutorial: @tutorial, tutor_options: @tutor_options, current_tutor: @current_tutor %>"

// Render the table_row_edit partial. If we just created a new tutorial via the 'Create' button, it won't have a row in the table yet.
if(document.getElementById(tutorialRowId) != null)
	$("#" + tutorialRowId).replaceWith(partial);	// Row already exists - replace it with the form
else
	$("#tutorials-table").append(partial);			// No row exists yet - append one

// Make sure the table is visible and the "no tutorials" message is hidden.
if($("#tutorials-table").find("tbody").children().length > 0)
{
	$("#no-tutorials-message").hide();
	$("#tutorials-table").show();
}