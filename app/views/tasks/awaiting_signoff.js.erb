function updateTaskEntryAwaitingSignOff() {
	var taskControls 	= $("#task-"+<%= @task.id %>+"-controls");
	var awaitingSignoff = <%= @task.awaiting_signoff %>;
	updateStatusDisplayButton(taskControls, awaitingSignoff);
}

function updateStatusDisplayButton(taskControls, awaitingSignoff) {
	if (awaitingSignoff) {
		taskControls.find(".status-display-button").html("Ready to Mark <i class=\"icon-thumbs-up\" style=\"display: block; float: right; margin-top: 2px;\"></i>");
		taskControls.find(".status-display-button").attr("class", "btn btn-primary status-display-button");
		taskControls.find(".dropdown-toggle").attr("class", "btn btn-primary dropdown-toggle");
	} else {
		taskControls.find(".status-display-button").html("Not Ready to Mark");
		taskControls.find(".status-display-button").attr("class", "btn status-display-button");
		taskControls.find(".dropdown-toggle").attr("class", "btn dropdown-toggle");
	}
}
updateTaskEntryAwaitingSignOff();