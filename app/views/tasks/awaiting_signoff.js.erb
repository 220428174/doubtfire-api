function updateTaskEntryAwaitingSignOff() {
	var taskContainer 	= $("#task-"+<%= @task.id %>+"-entry");
	var awaitingSignoff = <%= @task.awaiting_signoff %>;
	updateTaskStatusLabel(taskContainer, awaitingSignoff);
	updateStatusDisplayButton(taskContainer, awaitingSignoff);
}

function updateTaskStatusLabel(taskContainer, awaitingSignoff) {
	var statusLabel = taskContainer.find(".task-status");
	if (awaitingSignoff) {
		statusLabel.text("Awaiting Signoff");
	}
	else {
		statusLabel.text("Not submitted");
	}
}



function updateStatusDisplayButton(taskContainer, awaitingSignoff) {
	
	if (awaitingSignoff) {
		taskContainer.find(".status-display-button").html("Ready to Mark <i class=\"icon-thumbs-up\" style=\"display: block; float: right; margin-top: 2px;\"></i>");
		taskContainer.find(".status-display-button").attr("class", "btn btn-primary status-display-button");
		taskContainer.find(".dropdown-toggle").attr("class", "btn btn-primary dropdown-toggle");
	} else {
		taskContainer.find(".status-display-button").html("Not Ready to Mark");
		taskContainer.find(".status-display-button").attr("class", "btn status-display-button");
		taskContainer.find(".dropdown-toggle").attr("class", "btn dropdown-toggle");
	}
}

updateTaskEntryAwaitingSignOff();