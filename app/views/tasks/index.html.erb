<% content_for :sidebar do %>
	<ul class="nav nav-list">
		<li class="nav-header">Dashboard</li>
		<li><%= link_to 'Home', root_url %></li>
		<% unless @projects.empty? %>
			<%= render 'dashboard/student_projects_links', :student_projects => @projects, :selected_student_project => @project %>
		<% end %>
	</ul>
<% end %>
<div class="span9">
	<div class="row-fluid">
		<ul class="nav nav-pills">
			<li><%= link_to "Summary", project_path(@project) %></li>
			<li class="active"><%= link_to "Tasks", project_tasks_path(@project) %></li>
		</ul>
	</div>
	<div class="row-fluid">
		<div class="span6 widget">
			<%= render 'dashboard/task_list', :tasks => @project.tasks %>
		</div>
		<div class="span4 widget">
			<h2><i class="icon-bar-chart"></i>Progress</h2>
			<div class="widget-content" id="progress-widget">
				<%= render 'dashboard/project_progress', :project => @project %>
			</div>
		</div>
	</div>
</div>