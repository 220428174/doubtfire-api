<%= render 'layouts/projects_list', :projects => @projects, :selected_project => @project %>
<div class="span10">
	<div class="row-fluid">
		<ul class="nav nav-pills">
			<li><%= link_to "Summary", project_path(@project) %></li>
			<li class="active"><%= link_to "Tasks", project_tasks_path(@project) %></li>
		</ul>
	</div>
	<div class="row-fluid">
		<div class="span6 widget">
			<h2>Tasks</h2>
			<div class="widget-content" id="task-list-widget">
				<% @tasks.each do |task| %>
				<div class="task-list-entry">
					<h3 style="display: inline">
						<%= task.task_template.name %>
						<%= badge_for_task task %>
					</h3>
					<div class="task-entry-body">
						<p><%= task.task_template.description %></p>
					</div>
				</div>
				<% end %>
			</div>
		</div>
		<div class="span4 widget">
			<h2>Progress</h2>
			<div class="widget-content" id="progress-widget">
				<%= render 'dashboard/project_progress', :project => @project %>
			</div>
		</div>
	</div>
</div>