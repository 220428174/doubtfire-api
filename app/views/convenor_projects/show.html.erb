<% javascript 'task_status_breakdown.js' %>
<% javascript 'convenor_projects.js' %>

<% stylesheets 'convenor.css' %>

<% title @unit.name %>

<% content_for :sidebar do %>
    <ul class="nav nav-list">
        <li class="nav-header">Dashboard</li>
        <li><%= link_to 'Home', root_url %></li>
        <% unless @active_convenor_units.empty? %>
            <%= render partial: 'dashboard/convenor_projects_links',
                locals: {
                    active_projects: @active_convenor_units,
                    inactive_projects: @inactive_convenor_units,
                    selected_project: @unit
                }
            %>
        <% end %>
    </ul>
<% end %>

<div class="span9">

    <div class="row-fluid">
        <ul class="breadcrumb">
          <li>
            <%= link_to "Home", root_url %>
            <span class="divider">/</span>
          </li>
          <li class="active"><%= @unit.name %></li>
        </ul>

        <div class="tabbable"> 
            <ul class="nav nav-pills">
                <%= tab_li_tag("students-tab", true) do %>
                    <a href="#students-tab" data-toggle="tab">Summary</a>
                <% end %>
                <%= tab_li_tag("tutorials-tab") do %>
                    <a href="#tutorials-tab" data-toggle="tab">Tutorials</a>
                <% end %>
                <%= tab_li_tag("tasks-tab") do %>
                    <a href="#tasks-tab" data-toggle="tab">Tasks</a>
                <% end %>
            </ul>
            <div class="tab-content">

                <%= tab_div_tag("students-tab", true) do %>
                    <div class="widget">
                        <h2><i class="icon-user"></i>Students</h2>
                        <div class="widget-content" id="projects">
                            <%= render :partial => "student_list" %>
                        </div>
                    </div>
                <% end %>

                <%= tab_div_tag("tutorials-tab") do %>
                    <div class="widget">
                    <h2><i class="icon-group"></i>Tutorials</h2>
                    
                        <div class="widget-content">
                            <h3>
                                <%= link_to "Show All Tutorials", convenor_project_tutorials_path(@unit) %>
                            </h3>
                            <hr />
                            <%= render partial: "tutorial_list", :locals => { tutorials: @project_tutorials} %>
                        </div>
                    </div>
                <% end %>

                <%= tab_div_tag("tasks-tab") do %>
                    <div class="widget">
                        <h2><i class="icon-tasks"></i>Tasks</h2>
                        <div class="widget-content">
                            <%= 
                                render partial: "task_status_breakdown",
                                locals: { unit: @unit } 
                            %>
                        </div>
                    </div>
                <% end %>

            </div>
        </div>
    </div>
</div>