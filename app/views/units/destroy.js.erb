// Build the row id string from the project template id
var unitRowId = "project-" + "<%= @unit.id %>" +  "-row";

// Delete the corresponding row in the table
$("#" + unitRowId).remove();

// Replace the table with a message if there are no more rows
if($("#project-templates-table").find("tbody").children().length == 0)
{
	$("#project-templates-table").hide();
	$("#no-project-templates-message").show();
}