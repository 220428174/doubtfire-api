// Build the row id string from the unit id
var unitRowId = "project-" + "<%= @unit.id %>" +  "-row";

// Delete the corresponding row in the table
$("#" + unitRowId).remove();

// Replace the table with a message if there are no more rows
if($("#units-table").find("tbody").children().length == 0)
{
	$("#units-table").hide();
	$("#no-units-message").show();
}