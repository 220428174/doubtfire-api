// Build the row id string from the team id
var teamRowId = "team-" + "<%= @team.id %>" +  "-row";
var partial = "<%=j render :partial => 'teams/table_row_edit', :locals => { :team => @team } %>"

// Render the table_row_edit partial. If we just created a new team via the 'Create' button, it won't have a row in the table yet. 
if(document.getElementById(teamRowId) != null)
	$("#" + teamRowId).replaceWith(partial);	// Row already exists - replace it with the form
else
	$("#teams-table").append(partial);			// No row exists yet - append one

// Make sure the table is visible and the "no teams" message is hidden.
if($("#teams-table").find("tbody").children().length > 0)
{
	$("#no-teams-message").hide();
	$("#teams-table").show();
}