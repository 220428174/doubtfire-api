<%= simple_form_for @team, :html => { :class => 'well form-horizontal' } do |f| %>
  <%= f.association :project_template, :prompt => "Select a project..." %>
  <%= f.association :user, :label_method => lambda { |user| "#{user.first_name} #{user.last_name}" }, :prompt => "Select a tutor..." %>
  <%= f.input :meeting_time %>
  <%= f.input :meeting_location %>
  <%= f.button :submit %>
<% end %>
