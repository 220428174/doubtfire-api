<%- model_class = @team.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:project_template_id) %>:</strong></dt>
  <dd><%= ProjectTemplate.find(@team.project_template_id).name %></dd>
  <dt><strong>Tutor:</strong></dt>
  <dd><%= User.find(@team.user_id).first_name %> <%= User.find(@team.user_id).last_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:meeting_time) %>:</strong></dt>
  <dd><%= @team.meeting_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:meeting_location) %>:</strong></dt>
  <dd><%= @team.meeting_location %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              teams_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_team_path(@team), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              team_path(@team),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
