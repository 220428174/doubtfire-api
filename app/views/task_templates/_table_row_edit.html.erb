<tr id="task-<%= task_template.id %>-row">
	<%= simple_form_for task_template, :url => update_project_task_path(task_template.project_template_id, task_template), :remote => true do |f| %>
		<td><%= f.input :name, :label => false %></td>
		<td><%= f.input :description, :label => false %></td>
		<td><%= f.input :weighting, :label => false %></td>
		<td><%= f.input :required, :label => false %></td>
		<td><%= f.input :recommended_completion_date, :as => :string, :label => false, :input_html => {"data-behaviour" => "datepicker", :value => "#{task_template.recommended_completion_date.strftime('%Y-%m-%d')}"}  %></td>
		<td>
			<%= f.button :submit, "Update", :class => "btn btn-mini btn-success" %>
			<a href="#" class="btn btn-mini btn-danger">Cancel</a>
		</td>
	<% end %>
</tr>