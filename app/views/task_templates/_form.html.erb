<%= form_for @task, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :project_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :project_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :weighting, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :weighting, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :required, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :required, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :recommended_completion_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :recommended_completion_date, :class => 'datetime_select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tasks_path, :class => 'btn' %>
  </div>
<% end %>
