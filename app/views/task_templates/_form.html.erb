<%= simple_form_for @task_template, :html => { :class => 'well form-horizontal' } do |f| %>
  <%= f.association :project_template, :prompt => "Select a project..." %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :weighting %>
  <%= f.input :required %>
  <%= f.input :recommended_completion_date, :as => :date %>
  <%= f.button :submit %>
<% end %>
