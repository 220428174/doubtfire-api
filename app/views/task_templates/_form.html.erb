<%= simple_form_for @task_template, :html => { :class => 'well form-horizontal' } do |f| %>
  <% if @project_template.nil? %>
  	<%= f.association :project_template, :prompt => "Select a project..." %>
  <% end %>
  <%= f.input :name %>
  <%= f.input :description, :as => :text, :input_html => { :rows => 5 } %>
  <%= f.input :weighting %>
  <%= f.input :required %>
  <%= f.input :recommended_completion_date, :as => :string, :input_html => {:class => "datepicker", "data-behaviour" => "datepicker", :value => "#{Date.today.strftime('%Y-%m-%d')}"}  %>
  <%= f.button :submit %>
<% end %>
