// Build the row id string from the task_template
var taskRowId = "task-" + "<%= @task_template.id %>" +  "-row";

// Replace the row with the partial in __table_row.html.erb.
$("#" + taskRowId).replaceWith("<%=j render :partial => 'task_templates/table_row', :locals => { :task_template => @task_template } %>");