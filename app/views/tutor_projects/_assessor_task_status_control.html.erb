<div class="btn-group task-<%= task.id %>-status-control">
	<%= task_status_active_button(task) %>
	<ul class="dropdown-menu">
		<li>
			<a href="<%= assess_task_path(task, "complete") %>" data-method="put" class="ready-to-mark-button" data-remote="true">Complete <i class="icon-ok button-icon"></i></a>
		</li>
		<li>
			<a href="<%= assess_task_path(task, "fix") %>" data-method="put" class="ready-to-mark-button" data-remote="true">Fix <i class="icon-wrench button-icon"></i></a>
		</li>
		<li>
			<a href="<%= assess_task_path(task, "not_submitted") %>" data-method="put" class="ready-to-mark-button" data-remote="true">Not Submitted <i class="icon-minus-sign button-icon"></i></a>
		</li>
	</ul>
</div>